
{
  "appId": "com.socialdashboard.app",
  "productName": "Multi-App Social Dashboard",
  "directories": {
    "buildResources": "build"
  },
  "files": [
    "out/**/*",
    "main.js",
    "package.json",
    "node_modules/**/*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "target": "nsis",
    "arch": ["x64"]
  },
  "linux": {
    "target": "AppImage",
    "arch": ["x64"]
  }
}
